CompileFlags:
  # Use compile_commands.json as the source of truth
  CompilationDatabase: .
  
  Add:
    # Ensure we're using C11 standard
    - "-std=c11"
    
    # Add system includes for MinGW
    - "-isystem"
    - "F:/App/w64devkit/include"

  # Remove any C++ flags that might interfere
  Remove:
    - "-std=c++*"
    - "-stdlib=*"

# Use GCC as the compiler driver to get correct builtin headers
Diagnostics:
  UnusedIncludes: None
  MissingIncludes: None
  
Index:
  Background: Build
